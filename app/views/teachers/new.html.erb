<h1> Register As A New Teacher</h1>

<% if flash[:errors] %>
<h1>Error:</h1>
<ul><% flash[:errors].each do |error|  %>
<li> <%= error %> </li>
</ul>
<% end %>
<% end %>
<br>

<%= form_for (@teacher) do |f| %>
<div class="field">
<%= f.label :name %><br>
<%= f.text_field :name %><br>
</div>
<div class="field">
<%= f.label :username %>
<%= f.text_field :username %><br>
</div>
<div class="field">
<%= f.label :password %>
<%= f.password_field :password %><br>
</div>
<div class="field">
<%= f.collection_check_boxes :skill_ids, @skills, :id, :name %>
<div class="actions">
<%= f.submit %>
<% end %>
